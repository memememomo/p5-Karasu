use t::Utils;
use Mock::Basic;
use Test::More;

my $dbh = t::Utils->setup_dbh;
my $db_basic = Mock::Basic->new({dbh => $dbh});
$db_basic->setup_test_db;

subtest 'bulk_insert_method' => sub {
    $db_basic->bulk_insert('mock_basic', [
        {
            id => 1,
            name => 'perl',
        },
        {
            id => 2,
            name => 'ruby',
        },
        {
            id => 3,
            name => 'python',
        },
    ]);
    is $db_basic->count('mock_basic', 'id'), 3;
};

done_testing();

